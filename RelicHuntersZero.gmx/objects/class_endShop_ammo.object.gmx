{
    var p = activationClient.myPlayerId;
    
    if (ammoType == type_light) if (global.ammo_light[p] &gt;= global.ammo_light_max) canActivate = false;
    else if (ammoType == type_medium) if (global.ammo_medium[p] &gt;= global.ammo_medium_max) canActivate = false;
